	<div class="main-container">
		<div class="main width">
			<h1>View writings</h1>
			<div class="writingList"></div>
			<script>
				$.get( "getwritings", function( data ) {
					var obj = $.parseJSON(data);
					for(var i in obj)
					{
						var userName = obj[i].userName;
						var body = obj[i].body;
						
						$('.writingList').append('<div class="writing"><div class="uname">'+userName+'</div>');
						$('.writingList').append('<div class="body">'+body+'</div></div>');
					}
				});
			</script>
		</div>
	</div>
